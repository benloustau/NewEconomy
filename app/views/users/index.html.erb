 <h1>Browse Services</h1>

 	<%= form_tag users_path, :method => 'get'  do %>
  <p>
  <%= text_field_tag :search, params[:search]%>
  <%= submit_tag "Search", :name => nil %>
  </p>
  <% end %>
 
      <ol>
        <% @users.each do |user| %>
          <li>
            <%= image_tag user.avatar.url(:thumb) %> |
            <%= link_to user.fname, user %> |
            <%= user.offering %>|
            <%= user.location %>
          </li>
        <% end %>
      </ol>