<div class="profile_box">

  <div class="h1"><h1>Edit Your Profile</h1></div>

    <div class="container_main">

      <div class="container1">
        <%= form_for current_user, :html => {:multipart => true} do |f| %>
        <div>
          <%= image_tag @user.avatar.url(:medium) %><br>
          <%= f.label :avatar, 'Pick a pic' %>
          <%= f.file_field :avatar %>
        </div>
          <br />
        <div><%= f.label :username %><br />
          <%= f.text_field :username, autofocus: true %>
        </div>
      </div>

      <div class="container2">

        <br />
        <div class="name">
            <%= f.label :first_name %>
            <%= f.text_field :fname %>
            &nbsp; &nbsp; &nbsp;
            <%= f.label :last_name %>
            <%= f.text_field :lname %>
        </div>
          <br /><br />
        <div class="email_location">
            <%= f.label :email %>
            <%= f.email_field :email%>
            &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;
            <%= f.label :location %>
            <%= f.text_field :location %>
        </div>
          <br /><br />
        <div class='info-service'> 
            <%= f.label :description %><br />
            <%= f.text_area :description, :size => "50x5", placeholder: 'What describes you best...' %>
          <br />
            <%= f.label :service %></br>
            <%= f.text_area :offering, :size => "50x5", placeholder: 'Write your service...' %>
        </div>
          <br />
            <div class="address"><%= f.label :address %><br />
              <%= f.text_field :address %>
             </div>
          <br />
        <div class="update_button"><br />
          <%= f.submit "Update" %>
        </div>
        <% end %>
        </div>
      </div>
      
    </div>
    <div class="container3">
          <%= button_to "Delete My Account", user_registration_path, data: { confirm: "Are you sure?" }, :method => :delete %>
      </div>
  </div> 
</div>


